# ============================================
# Obsidian Bot Environment Configuration
# Copy this file to .env and fill in the values
# ============================================

# ============================================
# Application
# ============================================
ENVIRONMENT_MODE=prod
GIN_MODE=release
LOG_LEVEL=INFO

# ============================================
# Telegram Bot (required)
# ============================================
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ============================================
# AI Providers (at least one required)
# ============================================

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_KEYS=your_gemini_api_key_1,your_gemini_api_key_2

# Groq (fast LLM inference)
GROQ_API_KEY=your_groq_api_key

# Cloudflare Workers AI (recommended - free tier available)
CLOUDFLARE_WORKER_URL=https://your-worker.yourname.workers.dev

# OpenRouter (aggregates multiple providers)
OPENROUTER_API_KEY=your_openrouter_api_key

# HuggingFace Inference
HUGGINGFACE_API_KEY=your_huggingface_api_key
HF_TOKEN=your_huggingface_token

# ============================================
# Database (Turso LibSQL)
# ============================================
TURSO_DATABASE_URL=libsql://your-database.your-region.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token

# ============================================
# Redis (optional, for caching)
# ============================================
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=

# ============================================
# Authentication
# ============================================
SESSION_SECRET=your_very_long_random_secret_string_here

# ============================================
# Google OAuth (optional)
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# ============================================
# WhatsApp (Meta Business API)
# ============================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_APP_SECRET=your_whatsapp_app_secret
WHATSAPP_VERIFY_TOKEN=your_verify_token

# ============================================
# Git/Vault Configuration
# ============================================
GIT_VAULT_PATH=vault
GIT_USER_NAME=Obsidian Bot
GIT_USER_EMAIL=bot@obsidian.internal
GIT_REMOTE_URL=git@github.com:youruser/your-repo.git
GITHUB_TOKEN=your_github_token

# ============================================
# Dashboard
# ============================================
DASHBOARD_URL=http://localhost:8080
BACKEND_HOST=http://localhost:8080

# ============================================
# HashiCorp Vault (optional)
# ============================================
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=root

# ============================================
# Cloud Configuration
# ============================================
GOOGLE_CLOUD_PROJECT=your_project_id
ENABLE_GOOGLE_LOGGING=false

# ============================================
# AI Features
# ============================================
AI_ENABLED=true
ENVIRONMENT_ISOLATION_ENABLED=false

# ============================================
# Docker Deployment (override in production)
# ============================================
BOT_PORT=8080
BOT_MEMORY_LIMIT=512M
BOT_CPU_LIMIT=0.5
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb
REDIS_MEMORY_LIMIT=256M
