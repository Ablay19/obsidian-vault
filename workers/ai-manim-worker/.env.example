# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Webhook secret for security validation
# Generate a random string and use it when setting up the webhook
TELEGRAM_SECRET=generate-random-secret-string-here

# Cloudflare Configuration
# Get these from your Cloudflare dashboard at https://dash.cloudflare.com
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# AI Provider Configuration
# At least one AI provider must be configured for the service to work

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Groq (https://console.groq.com/keys)
GROQ_API_KEY=gsk_your-groq-api-key

# DeepSeek (https://platform.deepseek.com/api_keys)
DEEPSEEK_API_KEY=your-deepseek-api-key

# HuggingFace (https://huggingface.co/settings/tokens)
HF_TOKEN=your-huggingface-token

# Default AI provider (one of: openai, gemini, groq, deepseek, huggingface)
AI_PROVIDER=gemini

# Storage Configuration
# R2 Bucket for video storage
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-manim-videos-bucket

# AI Proxy Configuration (optional - for using external AI proxy)
# URL to AI proxy service (e.g., https://ai-proxy.example.com)
AI_PROXY_URL=https://ai-proxy.example.com

# Token for AI proxy authentication
AI_PROXY_TOKEN=your-ai-proxy-token

# Manim Renderer Configuration
# URL to Manim renderer service (only needed for production)
MANIM_RENDERER_URL=http://localhost:8080

# Use mock renderer for development (set to 'true' for local testing)
USE_MOCK_RENDERER=true

# Logging Configuration
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Rate Limiting
# Requests per minute per user
RATE_LIMIT_PER_MINUTE=10

# Requests per hour per user
RATE_LIMIT_PER_HOUR=100

# Environment
# development, staging, or production
ENVIRONMENT=development
