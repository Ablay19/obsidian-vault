{
  "name": "manim-renderer",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health",
    "healthcheckInterval": 30,
    "numReplicas": 1,
    "region": "us-east1"
  },
  "env": {
    "group": "production"
  },
  "domains": [
    {
      "primary": true,
      "domainName": "manim-renderer.up.railway.app"
    }
  ]
}
